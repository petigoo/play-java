# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           com.countdown.controllers.HomeController.index
GET     /count                      com.countdown.controllers.HomeController.getNumberOfDocuments
GET     /show/:id                   com.countdown.controllers.CountdownController.show(id)
POST    /add                        com.countdown.controllers.CountdownController.add
POST    /update/:id                 com.countdown.controllers.CountdownController.update(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
